{
  "name": "tipsy",
  "version": "2.1.0",
  "description": "A simple tip calculator and bill divider PWA",
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/tipsy.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/tipsy/issues"
  },
  "scripts": {
    "build": "tsc && vite build",
    "check-types": "npm-run-all --silent --parallel check-types:*",
    "check-types:src": "tsc",
    "check-types:cypress": "tsc --project cypress/tsconfig.json",
    "cm": "git-cz",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "dev": "vite",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,html,css,json,md,mdx,yml,yaml}\"",
    "lint": "eslint --ext \".js,.jsx,.ts,.tsx\" .",
    "husky:install": "husky install",
    "prepare": "npm run --silent husky:install",
    "preserve": "yarn build",
    "serve": "vite preview --port 3000",
    "test": "yarn test:e2e:ci",
    "test:e2e": "start-server-and-test dev http-get://localhost:3000 cy:open",
    "test:e2e:ci": "start-server-and-test serve 3000 cy:run",
    "validate": "npm-run-all --silent --parallel lint check-types build"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "private": true,
  "dependencies": {
    "@babel/core": "7.16.0",
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@fontsource/source-sans-pro": "4.5.1",
    "@semantic-release/git": "10.0.1",
    "@testing-library/cypress": "8.0.2",
    "@types/node": "16.11.12",
    "@types/react": "17.0.37",
    "@types/react-dom": "17.0.11",
    "@types/react-helmet": "6.1.4",
    "@vitejs/plugin-react": "1.1.1",
    "@wkovacs64/prettier-config": "3.0.0",
    "autoprefixer": "10.4.0",
    "clsx": "1.1.1",
    "commitizen": "4.2.4",
    "currency.js": "2.0.4",
    "cypress": "9.1.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.4.1",
    "eslint-plugin-cypress": "2.12.1",
    "eslint-plugin-wkovacs64": "13.8.0",
    "git-current-commit": "1.1.0",
    "history": "5.1.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.2",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.4",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-helmet": "6.1.0",
    "react-icons": "4.3.1",
    "react-router-dom": "6.0.2",
    "react-switch": "6.0.0",
    "semantic-release": "18.0.1",
    "start-server-and-test": "1.14.0",
    "tailwindcss": "2.2.19",
    "typescript": "4.5.3",
    "use-local-storage-state": "13.0.0",
    "vite": "2.7.1",
    "vite-plugin-pwa": "0.11.11",
    "workbox-build": "6.4.2",
    "workbox-window": "6.4.2"
  }
}
