{
  "name": "tipsy",
  "version": "2.1.1",
  "description": "A simple tip calculator and bill divider PWA",
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/tipsy.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/tipsy/issues"
  },
  "scripts": {
    "build": "tsc && vite build",
    "check-types": "npm-run-all --silent --parallel check-types:*",
    "check-types:src": "tsc",
    "check-types:cypress": "tsc --project cypress/tsconfig.json",
    "cy:open": "cypress open --config baseUrl=http://127.0.0.1:5173",
    "cy:run": "cypress run --config baseUrl=http://127.0.0.1:4173",
    "dev": "vite",
    "format": "prettier --cache --write .",
    "lint": "eslint .",
    "preview": "vite --host 127.0.0.1 preview",
    "test": "npm run test:e2e:ci",
    "test:e2e:open": "start-server-and-test dev 5173 cy:open",
    "test:e2e:run": "start-server-and-test preview 4173 cy:run"
  },
  "private": true,
  "dependencies": {
    "@babel/core": "7.22.1",
    "@babel/plugin-syntax-jsx": "7.21.4",
    "@fontsource/source-sans-pro": "5.0.1",
    "@semantic-release/git": "10.0.1",
    "@testing-library/cypress": "9.0.0",
    "@types/node": "18.16.16",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "@types/react-helmet": "6.1.6",
    "@vitejs/plugin-react-swc": "3.3.1",
    "@wkovacs64/prettier-config": "3.0.3",
    "autoprefixer": "10.4.14",
    "clsx": "1.2.1",
    "currency.js": "2.0.4",
    "cypress": "12.13.0",
    "eslint": "8.41.0",
    "eslint-plugin-cypress": "2.13.3",
    "eslint-plugin-wkovacs64": "14.2.0",
    "git-current-commit": "1.1.0",
    "history": "5.3.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.23",
    "prettier": "2.8.8",
    "prettier-plugin-tailwindcss": "0.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-helmet": "6.1.0",
    "react-icons": "4.8.0",
    "react-router-dom": "6.11.2",
    "react-switch": "7.0.0",
    "semantic-release": "21.0.2",
    "start-server-and-test": "2.0.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4",
    "use-local-storage-state": "18.3.3",
    "vite": "4.3.9",
    "vite-plugin-pwa": "0.15.1",
    "workbox-build": "6.6.0",
    "workbox-window": "6.6.0"
  }
}
