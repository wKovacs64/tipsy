{
  "name": "tipsy",
  "private": true,
  "version": "2.1.1",
  "description": "A simple tip calculator and bill divider PWA",
  "type": "module",
  "imports": {
    "#/*": "./*"
  },
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/tipsy.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/tipsy/issues"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "preview": "vite --host 127.0.0.1 preview",
    "test": "pnpm run test:e2e:open",
    "test:e2e:open": "playwright test --ui",
    "test:e2e:run": "cross-env CI=true playwright test",
    "typecheck": "tsc"
  },
  "packageManager": "pnpm@10.28.0",
  "dependencies": {
    "@fontsource/source-sans-3": "5.2.9",
    "clsx": "2.1.1",
    "currency.js": "2.0.4",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-router": "7.12.0",
    "tailwindcss": "4.1.18",
    "use-local-storage-state": "19.5.0"
  },
  "devDependencies": {
    "@babel/core": "7.28.5",
    "@babel/plugin-syntax-jsx": "7.27.1",
    "@babel/preset-typescript": "7.28.5",
    "@playwright/test": "1.57.0",
    "@semantic-release/git": "10.0.1",
    "@tailwindcss/vite": "4.1.18",
    "@types/fs-extra": "11.0.4",
    "@types/node": "24.10.7",
    "@types/react": "19.2.8",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react-swc": "4.2.2",
    "@wkovacs64/add-icon": "1.2.1",
    "@wkovacs64/eslint-config": "7.12.0",
    "@wkovacs64/prettier-config": "4.2.4",
    "babel-plugin-react-compiler": "1.0.0",
    "cross-env": "10.1.0",
    "eslint": "9.39.2",
    "fs-extra": "11.3.3",
    "git-current-commit": "1.1.0",
    "prettier": "3.7.4",
    "semantic-release": "25.0.2",
    "type-fest": "5.3.1",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-babel": "1.4.1",
    "vite-plugin-icons-spritesheet": "3.0.1",
    "vite-plugin-pwa": "1.2.0",
    "workbox-build": "7.4.0",
    "workbox-window": "7.4.0"
  }
}
