    "@tailwindcss/vite": "4.1.11",
    "@types/fs-extra": "11.0.4",
    "@types/node": "22.16.2",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@types/react-helmet": "6.1.11",
    "@vitejs/plugin-react-swc": "3.10.2",
    "@wkovacs64/eslint-config": "7.8.0",
