  },
  "bugs": {
    "url": "https://github.com/wKovacs64/tipsy/issues"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
